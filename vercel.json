{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/cron.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/webhook/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/send-horoscopes",
      "dest": "/api/cron.py",
      "methods": ["GET", "POST"]
    }
  ],
  "env": {
    "BOT_TOKEN": "BOT_TOKEN",
    "TON_WALLET_ADDRESS": "TON_WALLET_ADDRESS",
    "MONGO_URI": "MONGO_URI",
    "WEBHOOK_HOST": "WEBHOOK_HOST",
    "ADSGRAM_API_KEY": "ADSGRAM_API_KEY"
  },
  "crons": [
    {
      "path": "/send-horoscopes",
      "schedule": "0 6 * * *"
    }
  ]
}
